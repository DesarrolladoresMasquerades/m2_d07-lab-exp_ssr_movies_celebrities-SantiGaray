<h2>Movie details</h2>

<h3>TItle: {{title}}</h3>
<h4>Genre: {{genre}}</h4>
<h4>Plot: {{plot}}</h4>

{{#each cast}}
    <div>
        <p>Movie Cast: {{name}}</p>
        <p>Occupation: {{occupation}}</p>
        <p>Catch Phrase: {{catchPhrase}}</p>
        
    </div>
{{/each}}

<form action="/movies/{{_id}}/delete" method="POST">
    <button type="submit">Delete!</button>
</form>

<form action="/movies/{{_id}}/edit" method="GET">
    <button type="submit">Edit!</button> 
</form>

